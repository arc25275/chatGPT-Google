{
    "manifest_version": 2,
    "name": "ChatGpt Assistant",
    "version": "1.0",
    "description": "Adds a ChatGpt response to google searches",
    "icons": {
        "48": "icons/chatgpt.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.google.com/search*"
            ],
            "js": [
                "assistant.js"
            ]
        }
    ],
    "permissions": [
        "https://api.openai.com/v1/chat/completions"
    ]
}